<div class="modal" id="file_manager-type-modal">
  <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title">Upload Bibtex File</h4>
        </div>
        <%= bootstrap_form_tag url: url_for(upload_raw_bibtex_entry_path(@library)), :html => { :multipart => true }, remote: true  do |f| %>
        <div class="modal-body">
          <div id="failed_upload" class="alert alert-danger" role="alert" style="display: none">
            Failed Upload
          </div>
            <div style="display:none" id="bibtex-upload-progress-bar" class="col-md-12">
            Processing Bibtex Entries...
              <div class="progress">
                <div id="bibtex-upload-job-progress" class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;">0%</div>
              </div>
            </div>
          <%= f.file_field :bibtex_file, hide_label: :true %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
          <%= f.submit %>
        </div>
        <% end %>
      </div>
    </div>
</div>